<BorderPane prefHeight="500" prefWidth="600" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.faiveley.controller.RootLayoutController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleNew" text="New">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Save">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Save as" />
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Configuration">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showCustomerOverview" text="Customer" />
                        <MenuItem mnemonicParsing="false" onAction="#showVPNAccessOverview" text="VPN Access" />
                        <MenuItem mnemonicParsing="false" onAction="#showUserServerOverview" text="User Server" />
                        <MenuItem mnemonicParsing="false" onAction="#showDeveloperOverview" text="Developer" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#showTypeServerOverview" text="Server Type" />
                        <MenuItem mnemonicParsing="false" onAction="#showServerOverview" text="Server" />
                        <MenuItem mnemonicParsing="false" onAction="#showEnvironmentOverview" text="Environment" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Process">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showMainView" text="Process Upgrade" />
                    </items>
                </Menu>
                <Menu fx:id="skinmenu" mnemonicParsing="false" text="Skin" />
